{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run-journal-file",
            "type": "shell",
            "command": "${workspaceFolder}/build/journal_app",
            "args": ["log.txt", "MEDIUM"],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run-stats-collector",
            "type": "shell",
            "command": "${workspaceFolder}/build/stats_collector",
            "args": ["8080", "5", "10"],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "socket-group"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "run-journal-socket",
            "type": "shell",
            "command": "${workspaceFolder}/build/journal_app",
            "args": ["--socket", "127.0.0.1", "8080", "log.txt", "MEDIUM"],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "socket-group"
            },
            "problemMatcher": []
        },
        {
            "label": "run-full-program",
            "dependsOrder": "parallel",
            "dependsOn": [
                "run-stats-collector",
                "run-journal-socket"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}