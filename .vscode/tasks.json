{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Build",
      "type": "process",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\build",
        "--config",
        "Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Сборка проекта через CMake"
    },
    {
      "label": "Run Program",
      "type": "process",
      "command": "${workspaceFolder}\\build\\journal_app.exe",
      "args": [
        "log.txt",
        "MEDIUM"
      ],
      "dependsOn": ["CMake Build"],
      "problemMatcher": [],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}